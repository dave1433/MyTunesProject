<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="550.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.mohammadabd.itunes.GUI.UIController">

    <!-- Songs List -->
    <TableView fx:id="songTableView" layoutX="10.0" layoutY="31.0" prefHeight="375.0" prefWidth="584.0">
        <columns>
            <TableColumn fx:id="titleColumn" prefWidth="120.0" text="Title" />
            <TableColumn fx:id="artistColumn" prefWidth="100.0" text="Artist" />
            <TableColumn fx:id="genreColumn" prefWidth="80.0" text="Genre" />
            <TableColumn fx:id="albumColumn" prefWidth="100.0" text="Album" />
            <TableColumn fx:id="songDurationColumn" prefWidth="120.0" text="Duration" />
        </columns>
        <contextMenu>
            <ContextMenu>
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#onAddSongClicked" text="Add Song" />
                    <MenuItem mnemonicParsing="false" onAction="#onEditSongClicked" text="Edit Song" />
                    <MenuItem mnemonicParsing="false" onAction="#onRemoveSongClicked" text="Delete Song" />
                </items>
            </ContextMenu>
        </contextMenu>
    </TableView>

    <!-- Playlist Table -->
    <TableView fx:id="playlistTableView" layoutX="595.0" layoutY="31.0" prefHeight="185.0" prefWidth="219.0">
        <columns>
            <TableColumn fx:id="playlistNameColumn" prefWidth="100.0" text="Name" />
            <TableColumn fx:id="playlistSongsColumn" prefWidth="70.0" text="Songs" />
            <TableColumn fx:id="playlistDurationColumn" prefWidth="100.0" text="Duration" />
        </columns>
        <contextMenu>
            <ContextMenu>
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#onCreatePlaylistClicked" text="New Playlist" />
                    <MenuItem mnemonicParsing="false" onAction="#onEditPlaylistClicked" text="Edit Playlist" />
                    <MenuItem mnemonicParsing="false" onAction="#onDeletePlaylistClicked" text="Delete Playlist" />
                </items>
            </ContextMenu>
        </contextMenu>
    </TableView>

    <!-- Songs in Playlist Table -->
    <TableView fx:id="songsInPlaylistTableView" layoutX="595.0" layoutY="217.0" prefHeight="278.0" prefWidth="219.0">
        <columns>
            <TableColumn fx:id="playlistSongColumn" prefWidth="150.0" text="Song" />
            <TableColumn fx:id="playlistSongDurationColumn" prefWidth="70.0" text="Duration" />
        </columns>
        <contextMenu>
            <ContextMenu>
                <items>
                    <MenuItem mnemonicParsing="false" text="Remove from Playlist" />
                </items>
            </ContextMenu>
        </contextMenu>
    </TableView>

    <!-- Search Field -->
    <TextField fx:id="searchField" layoutX="595.0" layoutY="5.0" prefHeight="25.0" prefWidth="219.0" promptText="Search for song" />

    <!-- Media Control Buttons -->
    <Slider fx:id="progressSlider" layoutX="10.0" layoutY="421.0" prefWidth="575.0" />
    <Button layoutX="338.0" layoutY="450.0" mnemonicParsing="false" text="▶" />
    <Button layoutX="214.0" layoutY="450.0" mnemonicParsing="false" text="⏮" />
    <Button layoutX="373.0" layoutY="450.0" mnemonicParsing="false" text="⏭" />
    <Button layoutX="171.0" layoutY="450.0" mnemonicParsing="false" text="⏪" />
    <Button layoutX="259.0" layoutY="443.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="63.0" text="⏸" />
    <Label layoutX="513.0" layoutY="454.0" text="11:14 / 12:31" />
</AnchorPane>
